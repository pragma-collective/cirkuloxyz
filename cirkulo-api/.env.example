# Resend Email Configuration
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=re_your_api_key_here

# Email sender address (must be verified in Resend)
FROM_EMAIL=noreply@yourdomain.com

# Server Configuration
PORT=8000

# Application URL for invite links
APP_URL=http://localhost:8000

# Database Configuration
# For local development (without Docker)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/cirkulo

# For Docker
# DATABASE_URL=postgresql://postgres:postgres@postgres:5432/cirkulo

# Lens Protocol Configuration
# Use 'production' for mainnet, anything else (e.g., 'development', 'testnet') for testnet
# This controls both the Lens client environment and JWKS URI
LENS_ENVIRONMENT=development

# Backend signer private key (used to sign invite registrations)
BACKEND_SIGNER_PRIVATE_KEY=

LENS_CHAIN_RPC_URL=https://rpc.testnet.lens.xyz
